# Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...
TELEGRAM_CHAT_ID=123456789

# Polling interval in seconds
POLL_INTERVAL=600

# Etherscan (scraping used by default; Etherscan API key optional)
ETHERSCAN_API_KEY=

# Bitquery (optional backup source)
BITQUERY_API_KEY=

# Where to store snapshot file
SNAPSHOT_FILE=top100_snapshot.json

# Send full list every Nth poll (set 0 to disable)
SEND_FULL_EVERY=144   # e.g., 144*10min = once per day

# Logging level: DEBUG, INFO
LOG_LEVEL=INFO
